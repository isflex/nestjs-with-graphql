{
  "name": "@flexiness/nestjs-with-graphql",
  "version": "0.0.1",
  "description": "",
  "author": "",
  "license": "UNLICENSED",
  "scripts": {
    "prebuild": "rimraf dist",
    "build": "nest build",
    "format": "prettier --write \"src/**/*.ts\" \"test/**/*.ts\"",
    "mongod": "mongod --dbpath /home/$USER/data/db > /dev/null 2>&1",
    "start": "yarn concurrently -k -n MONGOD,NEST -s first \"yarn mongod\" \"nest start\"",
    "start:dev": "yarn concurrently -k -n MONGOD,NEST -s first \"yarn mongod\" \"nest start --watch\"",
    "start:debug": "yarn concurrently -k -n MONGOD,NEST -s first \"yarn mongod\" \"nest start --debug --watch\"",
    "start:prod": "yarn concurrently -k -n MONGOD,NEST -s first \"yarn mongod\" \"node dist/main\"",
    "lint": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
    "test:e2e": "jest --config ./test/jest-e2e.json",
    "prepare": "husky install"
  },
  "dependencies": {
    "@apollo/server": "4.3.2",
    "@nestjs/apollo": "10.1.7",
    "@nestjs/common": "9.2.1",
    "@nestjs/config": "2.2.0",
    "@nestjs/core": "9.2.1",
    "@nestjs/graphql": "10.1.7",
    "@nestjs/jwt": "10.0.1",
    "@nestjs/mongoose": "9.2.1",
    "@nestjs/passport": "9.0.0",
    "@nestjs/platform-express": "9.2.1",
    "@nestjs/typeorm": "9.0.1",
    "apollo-server-express": "3.11.1",
    "bcrypt": "^5.0.1",
    "concurrently": "^7.2.2",
    "env-cmd": "^10.1.0",
    "graphql": "16.6.0",
    "graphql-relay": "^0.10.0",
    "mongoose": "6.9.0",
    "passport": "^0.5.2",
    "passport-jwt": "^4.0.0",
    "reflect-metadata": "^0.1.13",
    "rimraf": "^3.0.2",
    "rxjs": "^7.2.0",
    "typeorm": "^0.2.36"
  },
  "devDependencies": {
    "@nestjs/cli": "9.1.9",
    "@nestjs/schematics": "9.0.4",
    "@nestjs/testing": "9.2.1",
    "@types/chance": "^1.1.3",
    "@types/express": "^4.17.13",
    "@types/graphql-relay": "^0.7.0",
    "@types/jest": "29.2.4",
    "@types/mongoose": "^5.11.97",
    "@types/node": "^18.0.3",
    "@types/passport-jwt": "^3.0.6",
    "@types/supertest": "^2.0.11",
    "@typescript-eslint/eslint-plugin": "5.30.5",
    "@typescript-eslint/parser": "5.30.5",
    "chance": "^1.1.8",
    "eslint": "^7.30.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-prettier": "^3.4.0",
    "husky": "^6.0.0",
    "jest": "29.3.1",
    "mongodb-memory-server": "^8.4.0",
    "prettier": "^2.7.1",
    "pretty-quick": "^3.1.1",
    "supertest": "^6.1.3",
    "ts-jest": "29.0.3",
    "ts-loader": "9.3.1",
    "ts-node": "10.9.1",
    "tsconfig-paths": "4.0.0",
    "typescript": "4.7.4"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": "src",
    "testRegex": ".*\\.spec\\.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "coverageThreshold": {
      "global": {
        "branches": 80,
        "functions": 50,
        "lines": 80,
        "statements": 80
      }
    },
    "collectCoverageFrom": [
      "**/*.(t|j)s",
      "!main.(t|j)s",
      "!**/*.module.(t|j)s",
      "!**/*.input.(t|j)s",
      "!**/*.entity.(t|j)s",
      "!**/*.args.(t|j)s",
      "!**/*.helper.(t|j)s",
      "!**/*.types.(t|j)s",
      "!**/*.entities.(t|j)s",
      "!**/*.helpers.(t|j)s",
      "!**/node_modules/**"
    ],
    "coverageDirectory": "../coverage",
    "testEnvironment": "node"
  }
}
